# BiteHeist Environment Variables
# Copy this file to .env and fill in your actual values

# Frontend (Vite)
VITE_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
VITE_APP_TITLE=BiteHeist Restaurant Audit
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=http://localhost:3003
VITE_API_URL=http://localhost:3003
VITE_ENABLE_MOCK_DATA=false

# Development settings
VITE_DEV_MODE=true
VITE_SHOW_DEBUG=false

# Analytics (optional)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# Backend Environment Variables
# ==============================

# Server Configuration
PORT=3003
NODE_ENV=development
API_VERSION=v1
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# MongoDB Configuration - Connected to MongoDB Atlas
# Get your connection string from https://cloud.mongodb.com
# Replace <username>, <password>, and <cluster-url> with your actual values
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>.mongodb.net/biteheist?retryWrites=true&w=majority&appName=restaurant-audit

# Email Service (optional - for sending reports)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3002
FRONTEND_URL_ALT=http://localhost:5173
