# backend/.env.example
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3003
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/biteheist

# Google Places API (New Places API v1) - REQUIRED
# This same key is used for both Places API and PageSpeed Insights API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3003/api/auth/google/callback
SESSION_SECRET=your-session-secret-key-change-this-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_ALT=http://127.0.0.1:5173

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
REQUEST_TIMEOUT=10000

# Revenue Calculation Defaults
DEFAULT_AOV=28
DEFAULT_CONVERSION_RATE=0.03
DEFAULT_MONTHLY_VISITORS=1000

# Email Configuration (for report delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@biteheist.com
FROM_NAME=BiteHeist

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log